<odoo>
    <record id="view_tour_vehicle_form" model="ir.ui.view">
        <field name="name">tour.vehicle.form</field>
        <field name="model">tour.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="license_plate"/>
                        <field name="capacity"/>
                        <field name="is_available"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tour_vehicle_tree" model="ir.ui.view">
        <field name="name">tour.vehicle.tree</field>
        <field name="model">tour.vehicle</field>
        <field name="arch" type="xml">
            <tree string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="capacity"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>
</odoo>
